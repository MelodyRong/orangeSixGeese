.classificationContentWrap {
  width: 100%;
  height: 100vh;
  font-size: 28rpx;
  display: flex;
}

.navigationWrap {
  width: 200rpx;
  background-color: rgba(255, 255, 255, .2);
  border-right: 2rpx solid #ea9518;
  overflow-y: scroll;
}

.navigationTab {
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
}

.navigationTabColor {
  color: #ffffff;
  font-size: 28rpx;
}

.navigationTabSelColor {
  background-color: rgba(255, 255, 255, .8);
  color: #ea9518;
  font-size: 30rpx;
}

.contentWrap {
  width: 100%;
  overflow-y: scroll;
}

.navContentWrap {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
}

.classificationContent {
  width: 30%;
  height: 200rpx;
  text-align: center;
}

.navContentImg {
  width: 100rpx;
  height: 100rpx;
}

.navContentDec {
  font-size: 30rpx;
  color: #ea9518;
}