.pageContent {
  position: relative;
  text-align: center;
  height: 100vh;
  background-color: rgba(255, 255, 255, .8);
}

/* 无地址数据 */
.noAddressList {
  position: relative;
  top: 30%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.noAddressListIcon {
  width: 350rpx;
}


/* 添加新地址btn */
.addNewAddress {
  position: absolute;
  bottom: 20rpx;
  z-index: 1;
  left: 50%;
  transform: translate(-50%);
  width: 92vw;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: #ffffff;
  font-size: 28rpx;
  background-color: #ea9518;
  border-radius: 10rpx;
}
