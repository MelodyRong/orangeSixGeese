.pageContent {
    height: 100vh;
    overflow-y: scroll;
}

.pageDetails {
    padding: 10rpx 10rpx 150rpx;
}

/* 地址栏 */
.addressBar {
    min-height: 100rpx;
    border-radius: 15rpx;
    padding: 10rpx;
    background-color: rgba(255, 255, 255, 0.8);
    display: flex;
    align-items: center;
    font-size: 32rpx;
    color: #ea9518;
}

/* 地址图标 */
.otherFunImg {
    width: 40rpx;
    height: 40rpx;
    margin-right: 40rpx;
}

/* 地址内容 */
.defultAddressWrap {
    font-size: 28rpx;
    width: 550rpx;
}

.phone {
    margin-left: 20rpx;
}

/* 右三角 */
.triangleImg {
    margin-left: auto;
}

/* 商品详情栏 */
.goodsBarWrap {
    margin-top: 10rpx;
}
   
.goodsBar, .priceBarWrap, .methodPayment{
    border-radius: 15rpx;
    padding: 10rpx;
    background-color: rgba(255, 255, 255, 0.8);
    font-size: 32rpx;
    color: #ea9518;
    margin-bottom: 10rpx;
}

.stroeNameWrap {
    display: flex;
    align-items: center;
    color: #ea9518;
}

.storeHeaderImg {
    width: 40rpx;
    height: 40rpx;
}

.stroeName {
    margin-left: 10rpx;
    font-weight: 600;
}

.goodsDetailsWrap {
    margin-top: 20rpx;
}

.goodsDetails {
    display: flex;
    margin-bottom: 20rpx;
}

.goodsImg {
    width: 200rpx;
    height: 200rpx;
    border-radius: 20rpx;
    margin-right: 10rpx;
}

.goodsName {
    max-width: 360rpx;
    overflow: hidden;
    height: 46rpx;
}

.goodsSpecification {
    color: #999999;
    font-size: 24rpx;
}

.goodsPriceNumWrap {
    margin-left: auto;
    text-align: right;
}

/* 配送服务 */
.postageWrap {
    display: flex;
    align-items: center;
    min-height: 80rpx;
}

.postageContent {
    margin-left: auto;
    display: flex;
    align-items: center;
    max-width: 300rpx;
}

.postageDetails {
    max-width: 250rpx;
}

.orderRemarkDetails {
    max-width: 250rpx;
    height: 50rpx;
    overflow: hidden;
}

/* 价格明细 */
.totalPriceWrap {
    display: flex;
    align-items: center;
    min-height: 80rpx;
}

.totaltext {
    font-size: 30rpx;
    color: #000000;
}

.totalNum {
    font-size: 26rpx;
    color: #999999;
}

.totalAmount {
    margin-left: auto;
    color: #000000;
    font-weight: 600;
}

/* 红包 */
.redEnvelope {
    display: flex;
    align-items: center;
    min-height: 80rpx;
}

.redEnvelopeDetails {
    margin-left: auto;
    color: #999999;
}

/* 支付方式 */
.weChatIcon {
    width: 50rpx;
    height: 50rpx;
    margin-right: 10rpx;
}

.methodPayment {
    display: flex;
    align-items: center;
}

.selAllIcon {
    margin-left: auto;
    margin-right: 0;
}  

/* 配送服务详情弹窗 */
.postageDetailsWin {
    height: 800rpx;
    padding: 20rpx;
    position: relative;
}

.postageDetailsWintitle {
    display: flex;
    font-size: 38rpx;
}

.normalDistribution {
    display: flex;
    min-height: 80rpx;
    align-items: center;
    margin-top: 20rpx;
}

.postageWinTextWrap {
    margin-left: auto;
    display: flex;
    align-items: center;
}

.postageWinText {
    margin-right: 10rpx;
}

.affirmBtn {
    position: absolute;
    z-index: 4;
    bottom: 20rpx;
    left: 50%;
    transform: translate(-50%);
    width: 95vw;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background-color: #ea9518;
    color: #ffffff;
    font-size: 38rpx;
    border-radius: 20rpx;
}

/* 订单备注弹窗 */
.orderRemarkInpWrap {
    width: 100%;
    margin-top: 20rpx;
    position: relative;
}

.orderRemarkInp {
    border-radius: 20rpx;
    border: 1px solid #ffffff;
    padding: 10rpx;
}

.orderRemarkLength {
    position: absolute;
    right: 30rpx;
    margin-top: -50rpx;
    font-size: 32rpx;
    color: #fca404;
}

/* 结算栏 */
.settlementBarWrap {
    position: fixed;
    bottom: 0;
    width: 100vw;
    height: 100rpx;
    background-color: #fff;
    display: flex;
}

.settlementBar {
    margin-left: auto;
    display: flex;
    align-items: center;
}

.goodsNum {
    color: #999999;
    font-size: 28rpx;
    margin-right: 10rpx;
}

.goodsTotalPrice {
    display: flex;
    align-items: center;
}

.combined {
    color: #999999;
    font-size: 28rpx;
}
  
.priceSymbol {
    color: #ea9518;
    font-weight: 500;
}
  
.settlementPrice {
    font-size: 50rpx;
    color: #ea9518;
    margin-right: 20rpx;
    font-weight: 500;
}

.confirmPayment {
    padding: 20rpx;
    border-radius: 10rpx;
    background-color: #fca404;
    color: #fff;
    font-size: 28rpx;
    margin-right: 20rpx;
}