.myPageView {
  padding: 20rpx 30rpx;
}

.personalInfo {
  display: flex;
}

.infoHeadImageWrap {
  width: 50px;
  height: 50px;
}

.headImage {
  width: 50px;
  height: 50px;
  border-radius: 50%;
}

.userNameIdWrap {
  margin-left: 20rpx;
  position: relative;
}

.userName {
  width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 42rpx;
}

.userId {
  width: 300rpx;
  position: absolute;
  bottom: 0;
  font-size: 24rpx;
  color: #999999
}

.operationWrap {
  margin-left: auto;
  display: flex;
  justify-items: center;
  align-items: center;
}

.publicImg {
  width: 40rpx;
  height: 40rpx;
}

.settingMessageImg {
  margin-left: 40rpx;
}

.orderWrapStyle {
  background-color: #f6f6f6;
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  margin-top: 30rpx;
}

.myOrderFunWrap {
  display: flex;
}

.myOrder {
  font-size: 28rpx;
  color: #ea9518;
}

.allOrderWrap {
  display: flex;
  align-items: center;
  margin-left: auto;
  color: #ea9518;
}

.allOrder {
  font-size: 28rpx;
}

.triangleImg {
  width: 28rpx;
  height: 22rpx;
}

.publicFun {
  height: 100rpx;
  border-radius: 20rpx;
  background-color: #f6f6f6;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}

.funListWrap{
  margin-top: 50rpx;
  padding: 20rpx 30rpx;
}

.funList {
  position: relative;
}

.orderListFunWrap {
  margin-top: 30rpx;
}

.funIconStyel {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  top: 50%;
  left: 50%;
  transform: translate(-50%);
}

.funText {
  font-size: 28rpx;
  color: #ea9518;
}

.otherFunListWrap {
  background-color: #f6f6f6;
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  margin-top: 30rpx;
}

.otherFunPublicStyle {
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #f2f2f2;
}

.funImgName {
  padding: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.otherFunImg {
  width: 40rpx;
  height: 40rpx;
  margin-right: 40rpx;
}

.otherFunName {
  font-size: 30rpx;
  color: #ea9518;
}

.triangleImg {
  margin-left: auto;
}
